<body>
    <div id="navbar">
        <a href="/" id="logo">
            <div id="logo">
                <img id="logoVector" src="/images/logo/Group 12.png" alt="">
            </div>
        </a>
        
        <div class="linkss">
            <ul class="menu">
                <li><a class="menuItem" href="/">HOME</a></li>
                <li><a class="menuItem" href="/#aboutscroll">ABOUT US</a></li>
                <li><a class="menuItem" href="/#productscroll">PRODUCTS</a></li>
                <li><a class="menuItem" href="/#galleryscroll">GALLERY</a></li>
                <li><a class="menuItem" href="/#contactusscroll">CONTACT US</a></li>
              </ul>
            <button class="hamburger">
            <i class="menuIcon material-icons" id="material-icons">menu</i>
            <i class="closeIcon material-icons">close</i>
            </button>
            <ul id="links">
                <li><a href="/" id="home">HOME</a></li>
                <li><a href="/#aboutscroll" id="aboutus">ABOUT US</a></li>
                <li><a href="/#productscroll" id="products">PRODUCTS</a></li>
                <li><a href="/#galleryscroll" id="gallery">GALLERY</a></li>
                <li><a href="/#contactusscroll" id="contactus">CONTACT US</a></li>
            </ul>
        </div>    
    </div>

    <div id="title_box1">
        <div id="title">
            <h2 id="main_title">Ceramic Tile</h2>
            <h1 style="letter-spacing: 4px;">Glazed Vitrified Tiles (GVT) that blend into every decor</h1> 
            <p class="sizess">Sizes Avalaible:</p>   
            <p style="margin-top: 0;"><a href="#600x1200">600 x 1200</a> &nbsp;&nbsp;|&nbsp;&nbsp; <a href="#600x600">600 x 600</a>&nbsp;&nbsp; |&nbsp;&nbsp; <a href="#800x1600"> 800 x 1600</a></p>    
        </div>
        <div class="mockup">
            <img src="images/productpage/ceramics.png" alt="">
        </div>
    </div>

    <div class="box" id="box" style="height: 78vh;">
        
        <div id="aboutscroll"></div>
        <div id="homescroll" style="position: absolute; top: 0;"></div>

    </div>
    
    <div class="wrapper">
        <div id="600x1200"></div>
    <h1 style="text-align: center;" id="sizes">600 x 1200</h1>
        <div class="img-area">
            <% for( let index = 0; index < ceramicNames.length; index++ ) { %>
                <div class="single-img">
                    <img src="/images/ceramics/600x1200/<%= ceramicLinks[index] %>" alt="">
                    <div class="marbleName">
                        <h1 style="color: white;"><%= ceramicNames[index] %> </h1>
                    </div>
                </div>
            <% } %>
        </div>
      </div>
      <div id="600x600"></div>
      <h1 style="text-align: center;" id="sizes">600 x 600</h1>
      <div class="img-area">
        <% for( let index = 0; index < ceramicNames1.length; index++ ) { %>
            <div class="single-img">
                <img src="/images/ceramics/600x600/<%= ceramicLinks1[index] %>" alt="">
                <div class="marbleName">
                    <h1 style="color: white;"><%= ceramicNames1[index] %> </h1>
                </div>
            </div>
        <% } %>
    </div>
    <div id="800x1600"></div>
    <h1 style="text-align: center;" id="sizes">800 x 1600</h1>
      <div class="img-area">
        <% for( let index = 0; index < ceramicNames2.length; index++ ) { %>
            <div class="single-img">
                <img src="/images/ceramics/800x1600/<%= ceramicLinks2[index] %>" alt="">
                <div class="marbleName">
                    <h1 style="color: white;"><%= ceramicNames2[index] %> </h1>
                </div>
            </div>
        <% } %>
    </div>
  </div>
    <script src="/js/hamburger.js"></script>
    <script src="/js/navbar.js"></script>
</body>
</html>